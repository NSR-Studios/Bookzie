<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTransaction">

    <TextView
        android:id="@+id/titlePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello World" />

    <ImageView
        android:id="@+id/imageCT"
        android:layout_width="131dp"
        android:layout_height="216dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="37dp"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titleCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/imageCT"
        tools:text="Title" />

    <TextView
        android:id="@+id/categoryCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleCT"
        android:layout_marginStart="41dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/imageCT"
        tools:text="Category" />

    <TextView
        android:id="@+id/conditionCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryCT"
        android:layout_marginStart="41dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/imageCT"
        tools:text="Condition" />

    <TextView
        android:id="@+id/priceCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conditionCT"
        android:layout_marginStart="41dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/imageCT"
        tools:text="Price" />

    <ImageView
        android:id="@+id/imageSellerCT"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageCT"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="25dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sellerCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageCT"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/imageSellerCT"
        android:textStyle="bold"
        tools:text="Seller" />

    <ImageView
        android:id="@+id/imageBuyerCT"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageSellerCT"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/buyerCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellerCT"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="107dp"
        android:layout_toEndOf="@+id/imageSellerCT"
        android:textStyle="bold"
        tools:text="Seller" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageBuyerCT"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="166dp"
        android:minHeight="48dp"
        android:spinnerMode="dialog"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
</RelativeLayout>