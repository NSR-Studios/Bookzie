<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changeLocation"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingConfirmation">

    <TextView
        android:id="@+id/mc_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/bookimage"
        android:text="Price"
        android:textColor="#D22630"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bookimage"
        app:layout_constraintTop_toBottomOf="@+id/mc_isbn" />

    <TextView
        android:id="@+id/mc_isbn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/bookimage"
        android:text="ISBN"
        android:textColor="#D22630"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bookimage"
        app:layout_constraintTop_toBottomOf="@+id/mc_title" />

    <TextView
        android:id="@+id/mc_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/mc_price2"
        android:text="Price"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bookimage"
        app:layout_constraintTop_toBottomOf="@+id/mc_isbn" />

    <TextView
        android:id="@+id/mc_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/mc_isbn2"
        android:text="ISBN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bookimage"
        app:layout_constraintTop_toBottomOf="@+id/mc_title" />

    <TextView
        android:id="@+id/mc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/bookimage"
        android:text="Book Title"
        android:textColor="#D22630"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="156dp"
        android:layout_height="244dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mc_title"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mc_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookimage"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/buyerimage"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="#F1EDED"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/sellerimage"
        android:layout_width="84dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mc_username"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buyerimage"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mc_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookimage"
        android:layout_marginStart="300dp"
        android:layout_marginTop="15dp"
        android:textColor="#D22630"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sellerimage"
        tools:text="Seller Username" />

    <ImageView
        android:id="@+id/buyerimage"
        android:layout_width="84dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mc_username2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mc_username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookimage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="#D22630"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/buyerimage"
        tools:text="Buyer Username" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/buyerimage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#D22630"
        android:text="Find Location"
        android:textColor="#071D49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D22630"
        android:text="Edit time/Location"
        android:textColor="#071D49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sellerimage"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/button2"
        android:backgroundTint="#D22630"
        android:text="Cancel Transaction"
        android:textColor="#071D49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyerimage" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button4"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/button2"
        android:backgroundTint="#D22630"
        android:text="Transaction Complete"
        android:textColor="#071D49"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mc_location"
        android:layout_marginStart="-112dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="152dp"
        android:layout_toEndOf="@+id/buyerimage"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="#F1EDED"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time2"
        android:layout_marginStart="-112dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="156dp"
        android:layout_toEndOf="@+id/buyerimage"
        android:text="date"
        android:textAlignment="center"
        android:textColor="#F1EDED"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mc_location" />

</RelativeLayout>
